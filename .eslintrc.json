{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "plugin:vue/essential",
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "linebreak-style": ["error", "windows"],
        "indent": ["error", "tab"],
        "no-tabs": ["off", { "allowIndentationTabs": true }],
				"max-len": ["error", { "code": 155 }],
				"comma-dangle": ["error", "never"],
				"no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
    }
}
